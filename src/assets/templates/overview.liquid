{% layout 'layout' %}
{% block %}
{% render 'repo_nav', owner: owner, repo: repo, refEnc: refEnc, showRefDropdown: false %}
{% render 'progress', progress: progress %}
<div class="space-y-6">
  <div>
    <h2>Overview</h2>
    <p class="muted">
      Default branch: <code>{{ refShort }}</code>
    </p>
  </div>
  <div class="repo-grid">
    <div class="card p-4">
      <h3>Branches</h3>
      <div class="list">
        {% if branches and branches.size > 0 %}
          {% for branch in branches %}
            <div>
              <a href="/{{ owner }}/{{ repo }}/tree?ref={{ branch.name }}">
                {{- branch.displayName -}}
              </a>
            </div>
          {% endfor %}
        {% else %}
          <div class="muted">(none)</div>
        {% endif %}
      </div>
    </div>
    <div class="card p-4">
      <h3>Tags</h3>
      <div class="list">
        {% if tags and tags.size > 0 %}
          {% for tag in tags %}
            <div>
              <a href="/{{ owner }}/{{ repo }}/tree?ref={{ tag.name }}">{{ tag.displayName }}</a>
            </div>
          {% endfor %}
        {% else %}
          <div class="muted">(none)</div>
        {% endif %}
      </div>
    </div>
  </div>
  {% if readmeMd %}
    <div class="mt-8 border border-gray-200 dark:border-gray-700 rounded-lg p-6 bg-white dark:bg-gray-800/30 markdown-content">
      <div
        data-markdown="1"
        data-md-owner="{{ owner }}"
        data-md-repo="{{ repo }}"
        data-md-ref="{{ refShort }}"
        data-md-base=""
      >
        <pre class="md-src">{{ readmeMd }}</pre>
      </div>
    </div>
  {% endif %}
</div>
{% endblock %}
