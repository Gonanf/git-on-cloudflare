{
  "name": "git-on-cloudflare",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local",
    "deploy": "npm run build:css && wrangler deploy",
    "build:css": "postcss ./src/assets/app.css --verbose -o ./src/assets/dist/app.css --minify",
    "watch:css": "postcss ./src/assets/app.css --verbose -o ./src/assets/dist/app.css --watch",
    "test": "ava",
    "test:workers": "vitest run --config vitest.config.ts",
    "test:auth": "vitest run --config vitest.auth.config.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "cf-typegen": "wrangler types --strict-vars false",
    "db:gen": "drizzle-kit generate --config drizzle.config.ts"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.70",
    "@shopify/prettier-plugin-liquid": "^1.10.0",
    "@tailwindcss/postcss": "^4.1.13",
    "ava": "^6.1.2",
    "bootstrap-icons": "^1.13.1",
    "cssnano": "^7.1.1",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-url": "^10.1.3",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.37.1"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "isomorphic-git": "^1.33.1",
    "itty-router": "^5.0.22",
    "liquidjs": "^10.21.1"
  },
  "ava": {
    "files": [
      "test/**/*.test.ts",
      "!test/**/*.worker.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsx",
      "--import=./test/register.js"
    ],
    "timeout": "30s"
  }
}
